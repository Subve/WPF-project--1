<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <StackPanel>
        <GroupBox Margin="15">
            <GroupBox.Header >
                <Bold>Ile grasz?</Bold>
            </GroupBox.Header>
            <StackPanel>
            <RadioButton>1h</RadioButton>
                <RadioButton>2h</RadioButton>
                <RadioButton>3h</RadioButton>
                <RadioButton>4h</RadioButton>
        </StackPanel>
    </GroupBox>
    <GroupBox Margin="15">
            <GroupBox.Header>
                <Bold>Ile spisz?</Bold>
            </GroupBox.Header>
            <StackPanel>
                <RadioButton>5h</RadioButton>
                <RadioButton>6h</RadioButton>
                <RadioButton>7h</RadioButton>
                <RadioButton>Ponad 8h</RadioButton>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
